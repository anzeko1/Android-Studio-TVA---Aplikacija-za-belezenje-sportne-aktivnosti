<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseActivity">
    <FrameLayout
        android:id="@+id/enter_activity_main"
        android:layout_width="320px"
        android:layout_height="110px"
        android:layout_marginStart="30px"
        android:layout_marginTop="30px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="closeChooseActivity">

        <Button
            android:id="@+id/go_back_button"
            android:layout_width="320px"
            android:layout_height="100px"
            android:layout_gravity="fill"
            android:background="#0000"
            android:text="@string/go_back"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="45px"
            app:backgroundTint="@color/white"
            android:onClick="closeEnterActivity"/>

        <ImageButton
            android:id="@+id/go_back"
            android:layout_width="40px"
            android:layout_height="120px"
            android:background="#0000"
            android:contentDescription="@string/enter_activity"
            android:src="@drawable/go_back"
            android:onClick="closeEnterActivity"/>
    </FrameLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:text="@string/choose_activity"
        android:textSize="80px"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans"
        android:textFontWeight="900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/running"
        android:layout_width="322dp"
        android:layout_height="143dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/layout_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/runningImage"
            android:layout_width="322dp"
            android:layout_height="143dp"
            android:layout_gravity="center"
            android:src="@drawable/running"
            android:contentDescription="@string/running"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="339dp"
            android:onClick="enterActivity"/>

        <Button
            android:id="@+id/runningActivity"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/running"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:alpha="0.75"
            android:textAllCaps="false"
            android:textSize="45px"
            android:background="@drawable/activity_button"
            app:backgroundTint="@color/white"
            android:onClick="enterActivity"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/walking"
        android:layout_width="322dp"
        android:layout_height="143dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/layout_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/walkingImage"
            android:layout_width="322dp"
            android:layout_height="143dp"
            android:layout_gravity="center"
            android:src="@drawable/walking"
            android:contentDescription="@string/enter_activity"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="339dp"
            android:onClick="enterActivity"/>

        <Button
            android:id="@+id/walkingActivity"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/walking"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:alpha="0.75"
            android:textAllCaps="false"
            android:textSize="45px"
            android:background="@drawable/activity_button"
            app:backgroundTint="@color/white"
            android:onClick="enterActivity"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/cycling"
        android:layout_width="322dp"
        android:layout_height="143dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/layout_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/cyclingImage"
            android:layout_width="322dp"
            android:layout_height="143dp"
            android:layout_gravity="center"
            android:src="@drawable/cycling"
            android:contentDescription="@string/enter_activity"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="339dp"
            android:onClick="enterActivity"/>

        <Button
            android:id="@+id/cyclingActivity"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/cycling"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:alpha="0.75"
            android:textAllCaps="false"
            android:textSize="45px"
            android:background="@drawable/activity_button"
            app:backgroundTint="@color/white"
            android:onClick="enterActivity"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>